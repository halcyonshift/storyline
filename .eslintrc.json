{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/electron",
    "plugin:import/typescript",
    "prettier"
  ],
  "parserOptions": {
    "project": true,
    "tsconfigRootDir": "./"
  },
  "root": true,
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": [
    "__mocks__/**/*",
    "__tests__/**/*",
    "webpack.*",
    "*.config.*"
  ],
  "rules": {
    "complexity": ["error", {"max": 10}],
    "max-len": ["error", 100],
    "max-params": ["error", 4],
    "max-nested-callbacks": ["error", 4],
    "no-console": ["error"],
    "semi": ["error", "never"]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
