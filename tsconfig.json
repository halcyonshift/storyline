{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "dist",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@sl/*": ["src/StoryLine/*"]
    },
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "__tests__", "__mocks__"],
  "files": [
    "src/StoryLine/types/index.d.ts",
    "src/StoryLine/types/styles.d.ts"
    ]
}
