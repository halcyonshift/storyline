{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "files": ["src/types/index.d.ts"],
}
